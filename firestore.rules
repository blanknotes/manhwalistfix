rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan siapa saja (login/tidak) untuk membaca daftar thread
    match /forumThreads/{threadId} {
      allow read, list: if true;
      
      // Penulisan tetap dilarang dari browser (aman karena lewat API Route)
      allow write: if false;
    }

    // Aturan global jika ada koleksi lain
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}